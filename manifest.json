{

  "manifest_version": 2,
  "name": "Piggify",
  "version": "1.0",

  "description": "Translates any text on a website into pig-latin",


  "icons": {
    "48": "icons/border-48.png"
  },

  "permissions": [
    "<all_urls>",
    "http://127.0.0.1:5000/",
    "webRequest"
  ],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["piggify.js"]
    }
  ]

}
